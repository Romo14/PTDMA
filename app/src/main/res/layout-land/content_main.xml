<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.oriolgasset.weatherforecast.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Barcelona"
            android:id="@+id/locationName"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />


    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/weahterIconMain"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/textClock"
        android:layout_alignParentEnd="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_below="@+id/locationName"
        android:layout_alignStart="@+id/locationName"
        android:layout_alignEnd="@+id/locationName"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="18ยบ"
        android:id="@+id/temperatureText"
        android:textAlignment="center"
        android:textSize="60dp"
        android:layout_below="@+id/textClock"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sunny"
        android:id="@+id/descriptionText"
        android:layout_above="@+id/maxTempText"
        android:layout_toEndOf="@+id/temperatureText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max:"
        android:id="@+id/maxTempText"
        android:textSize="20dp"
        android:layout_alignTop="@+id/maxTempValue"
        android:layout_alignStart="@+id/temperatureText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTempValue"
        android:text="21ยบ"
        android:layout_below="@+id/temperatureText"
        android:layout_toEndOf="@+id/maxTempText"
        android:layout_marginLeft="5dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min:"
        android:id="@+id/minTempText"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:layout_above="@+id/humidityText"
        android:layout_toEndOf="@+id/temperatureText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTempValue"
        android:text="13ยบ"
        android:textSize="20dp"
        android:layout_above="@+id/humidityText"
        android:layout_toEndOf="@+id/minTempText"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity:"
        android:id="@+id/humidityText"
        android:textSize="20dp"
        android:layout_below="@+id/maxTempText"
        android:layout_alignStart="@+id/windText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind:"
        android:id="@+id/windText"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/humidityText"
        android:layout_alignStart="@+id/maxTempText"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54%"
        android:id="@+id/humidityValue"
        android:textSize="20dp"
        android:layout_above="@+id/windText"
        android:layout_alignEnd="@+id/windValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17 km/h"
        android:id="@+id/windValue"
        android:textSize="20dp"
        android:layout_alignTop="@+id/windText"
        android:layout_toEndOf="@+id/windText"
        android:layout_marginLeft="2dp" />
</RelativeLayout>
    </ScrollView>

