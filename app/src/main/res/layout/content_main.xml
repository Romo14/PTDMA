<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F2F7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.oriolgasset.weatherforecast.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />


        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationName"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp" />

        <include
            android:id="@+id/mainInfoCardView"
            layout="@layout/main_weather_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textClock"
            android:layout_marginTop="10sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/hourlyForecastCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainInfoCardView"
            android:layout_marginTop="10sp">

            <HorizontalScrollView
                android:id="@+id/hourlyHorizontalScrollView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/hourlyForecastText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8sp"
                        android:layout_marginStart="8sp"
                        android:layout_marginTop="5sp"
                        android:text="@string/hourly_forecast"
                        android:textColor="@color/secondary_text" />

                    <LinearLayout
                        android:id="@+id/hourlyParentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/hourlyForecastText"
                        android:divider="@color/primary"
                        android:dividerPadding="5sp"
                        android:orientation="horizontal">

                    </LinearLayout>
                </RelativeLayout>
            </HorizontalScrollView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dailyForecastCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hourlyForecastCardView"
            android:layout_marginTop="10sp">

            <HorizontalScrollView
                android:id="@+id/dailyHorizontalScrollView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/dailyForecastText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8sp"
                        android:layout_marginStart="8sp"
                        android:layout_marginTop="5sp"
                        android:onClick="focusAdditionalInfo"
                        android:text="@string/daily_forecast"
                        android:textColor="@color/secondary_text" />

                    <LinearLayout
                        android:id="@+id/dailyParentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/dailyForecastText"
                        android:divider="@color/primary"
                        android:dividerPadding="5dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                </RelativeLayout>
            </HorizontalScrollView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/detailsForecastCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dailyForecastCardView"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/detailedWeatherLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="8sp"
                    android:text="@string/weather_details"
                    android:textColor="@color/secondary_text"/>


                <TextView
                    android:id="@+id/humidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginStart="10dp"
                    android:text="@string/humidity"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/windText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView"
                    android:layout_below="@+id/humidityText"
                    android:text="@string/wind"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/humidityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/humidityText" />

                <TextView
                    android:id="@+id/windValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/humidityText"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/windText" />

                <TextView
                    android:id="@+id/pressureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/windText"
                    android:layout_below="@+id/windValue"
                    android:text="@string/pressure"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/pressureValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/windValue"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/pressureText" />

                <TextView
                    android:id="@+id/cloudText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/pressureText"
                    android:layout_below="@+id/pressureText"
                    android:text="@string/clouds"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/cloudValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pressureValue"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/cloudText" />

                <TextView
                    android:id="@+id/precipitationsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/cloudText"
                    android:layout_below="@+id/cloudText"
                    android:text="@string/precipitations"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/precipitationsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cloudValue"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/precipitationsText" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mapForecastCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsForecastCardView"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:layout_marginBottom="8sp">

                <TextView
                    android:id="@+id/mapText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="8sp"
                    android:text="@string/weather_maps"
                    android:textColor="@color/secondary_text"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>

